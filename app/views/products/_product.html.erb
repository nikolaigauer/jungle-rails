<article class="product">
  <header>
  
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
    
    <%= link_to product do %>
      <% sum = product.reviews.sum(:rating) / (product.reviews.size.nonzero? || 1) %>
        <% if sum == 1 %>
          <aside class="review">
            <i class="fa fa-star" aria-hidden="true"></i>
          </aside>
        <% end %>
          </br>
        <% if sum == 2 %>
          <aside class="review">
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
          </aside>
        <% end %>
          </br>
        <% if sum == 3 %>
          <aside class="review">
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
          </aside>
        <% end %>
          </br>
        <% if sum == 4 %>
          <aside class="review">
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>          
            <i class="fa fa-star" aria-hidden="true"></i>
          </aside>
        <% end %>
          </br>
        <% if sum == 5 %>
          <aside class="review">
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
            <i class="fa fa-star" aria-hidden="true"></i>
            </br>
          </aside>
        <% end %>
          </br>
      <% end %>

           

  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
    <%= link_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  
  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
  <% if product.quantity == 0 %>
  <aside class="soldout">SOLD OUT!</aside>
  <% end %>
</article>
