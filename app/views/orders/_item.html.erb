<% if product = Product.find_by(id: product_id) %>
    <div class="thumbnail">
       <%= image_tag product.image.tiny %>
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= humanized_money_with_symbol line_total %></p>
      </div>
    </div>
<% end %>


